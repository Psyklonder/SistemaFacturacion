@model IEnumerable<FacturacionElectronica.Entities.Cliente>
@{
    ViewBag.Title = "Create";
}

<h2>Crear factura</h2>
<hr />
<b>Por favor seleccione el cliente:</b>
<br />
<br />
@using (Html.BeginForm())
{
    <table id="DataTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.documento)
                </th>
              
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>

                        @Html.ActionLink(item.nombres + " " + item.apellidos, "CrearFactura", new { id = item.id })

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.documento)
                    </td>
                                        
                </tr>
            }
        </tbody>

    </table>

}

