@model IEnumerable<FacturacionElectronica.Entities.Empleado>

@{
    ViewBag.Title = "Index";
}

<h2>Empleados</h2>

<span>
    <a href="@Url.Action("Create", "Empleados", null)" title="Borrar">Nuevo<i class="fa fa-plus text-success"></i></a>
</span>
<span style="float:right">Inactivo<i class="fas fa-circle" style="color:red"></i></span>
<hr />

@using (Html.BeginForm())
{
    <table id="DataTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nombres)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.apellidos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fechaNacimiento)
                </th>
                <th>
                  Rol
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                @if (item.Usuario.habilitado)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.nombres)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fechaNacimiento)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario.Rol.FirstOrDefault().nombre)
                    </td>
                }
                else
                {
                    <td style="color:red">
                        @Html.DisplayFor(modelItem => item.nombres)
                    </td>
                    <td style="color:red">
                        @Html.DisplayFor(modelItem => item.apellidos)
                    </td>
                    <td style="color:red">
                        @Html.DisplayFor(modelItem => item.fechaNacimiento)
                    </td>

                    <td style="color:red">
                        @Html.DisplayFor(modelItem => item.Usuario.Rol.FirstOrDefault().nombre)
                    </td>
                }

            <td>
                <a href="@Url.Action("Details", "Empleados", new { id = item.id })" title="Detalle"><i class="fa fa-eye text-success-new"></i></a>
                <a href="@Url.Action("Edit", "Empleados", new { id = item.id })" title="Editar"><i class="fa fa-edit text-warning"></i></a>
                <!--<a href="@Url.Action("Delete", "Empleados", new { id = item.id })" title="Borrar"><i class="fa fa-trash text-danger"></i></a>-->
            </td>
            </tr>
            }
        </tbody>

    </table>

}
