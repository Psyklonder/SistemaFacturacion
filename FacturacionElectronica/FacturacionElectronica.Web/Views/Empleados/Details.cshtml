@model FacturacionElectronica.Entities.Empleado

@{
    ViewBag.Title = "Details";
}

<div>
    <h2>Detale del empleado:</h2>
    <p> @Html.DisplayFor(model => model.nombres)   @Html.DisplayFor(model => model.apellidos)</p>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.fechaNacimiento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fechaNacimiento)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Usuario.userName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Usuario.userName)
        </dd>

        <dt>
            Estado
        </dt>

        <dd>
            @if (Model.Usuario.habilitado)
            {
                <span class="text-succes">Habilitado</span>
            }
            else
            {
                <span class="text-danger">Deshabilitado</span>
            }

        </dd>

    </dl>
</div>
<p>
    <a href="@Url.Action("Index", "Empleados", null)" class="text-default"><i class="fa fa-arrow-left"></i>Regresar</a>
</p>
